extends layouts/main

block content
    div.video-detail__container
        div.video__player 
            video(src=`/${videoDB.fileUrl}`, controls=true)
        div.video__info
            a(href=`${routes.editVideo(videoDB.id)}`) 
                button Edit video
            h5.video__title=videoDB.title
            span.video__views=videoDB.views
            p.video__description=videoDB.description
            if videoDB.views === 1
                span.video__views 1 view
            else
                span.video__views #{videoDB.views} views
        div.video__comments
            if videoDB.comments.length === 1
                span.video__comment-number 1 comment
            else
                span.video__comment-number #{videoDB.comments.length} comments


